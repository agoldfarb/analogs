<!DOCTYPE html>
<html>
<head>
  <title>ANALOGS</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  <div class="container">
    <ul class="nav nav-tabs">
      <li><h2><%= link_to "ANALOGS", root_path %></h2></li>

     <div class="pull-right user-info">
     <h2>
          <% if current_user %>
            HELLO <%= link_to (current_user.name.upcase), current_user %>/<%= link_to "SIGN OUT", destroy_user_session_path, method: :delete %>
          <% else %>
            <%= link_to "SIGN IN", new_user_session_path %> /
            <%= link_to "SIGN UP", new_user_registration_path %>
          <% end %>
      </h2>
        </div>
      </ul>

<%= yield %>

</body>
</html>